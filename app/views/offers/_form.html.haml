.row
  .col-md-4.col-md-offset-4
    = semantic_form_for @offer  do |f| 
      = f.inputs do
        = f.input :title
        = f.input :description
        = f.input :kind, :as => :select, :collection => ["Offre", "Demande"], :include_blank => false
        = f.input :end_date
        = f.input :tag
        = f.input :min_price
        = f.input :max_price
        = f.input :sub_category, :include_blank => false
        = f.input :city, :include_blank => false
        = f.input :phone
        = f.input :active
      = f.actions do
        = f.submit "Confirmer"